<UserControl x:Class="JobStack.DesignVagaInscrita"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobStack"
             mc:Ignorable="d"
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Margin=" 0,0,0,10">
    <!-- DESIGN DA EXIBIÇÃO DE VAGA PARA A INTERFACE DO ALUNO -->
    <UserControl.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Grid Height="190" Width="790">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="3"/>
        </Grid.Effect>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Grid.Resources>
        <Border x:Name="Borda" Height="200" Width="790" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <Grid>
                <Rectangle Fill="White" 
                   RadiusX="10" 
                   RadiusY="10"
                   Width="790" Height="200"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                   >
                    <Rectangle.Effect>
                        <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="3"/>
                    </Rectangle.Effect>
                </Rectangle>

                <TextBlock x:Name="NomeEmpresa" 
                   Text="Nome da Empresa" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Margin="66,29,0,0" 
                   FontSize="22" 
                   FontFamily="Century Gothic"
                   Foreground="Black"/>
                <Grid x:Name="GridIconeEmpresa">
                    <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Height="40" Width="40" CornerRadius="25">
                        <Border.Background>
                            <ImageBrush x:Name="Img" ImageSource="blank-profile-picture-973460_1280-1-705x705.png" Stretch="Fill" />
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.2" BlurRadius="5" />
                        </Border.Effect>
                    </Border>
                </Grid>
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Margin="29,66,0,0">

                    <TextBlock x:Name="NomeVaga" Text="Nome da Vaga" FontSize="24" 
                   FontFamily="Century Gothic" 
                   Foreground="#FF003964"/>

                    <TextBlock x:Name="TipoVaga" 
                   Text="Tipo da Vaga" 
                    Margin="10,5,0,0"
                   FontSize="18" 
                   FontFamily="Century Gothic" 
                   Foreground="#FF003964"/>

                    <TextBlock x:Name="StatusVaga" 
                   Text="Status" 
                    Margin="15,8,0,0"
                   FontSize="14" 
                   FontFamily="Century Gothic" 
                   Foreground="#FF003964"/>

                </StackPanel>
                
                <TextBlock x:Name="DescricaoVaga" 
                   Text="Descrição da Vaga" 
                   VerticalAlignment="Top" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left" 
                   Margin="30,103,0,0" 
                   FontSize="11" 
                   FontFamily="Century Gothic" Height="49" Width="750" />
                <TextBlock x:Name="Selecao" Text="Selecionado" Foreground="Green"
                           FontFamily="Century Gothic" FontSize="20"
                           HorizontalAlignment="Right" VerticalAlignment="Top"
                           Margin="0,40,30,0" Visibility="Hidden"/>
                <Button x:Name="BtnVerMais"
                Width="90" 
                Height="25" 
                Margin="0,0,25,18" 
                Content="Ver mais" 
                FontSize="12" 
                FontFamily="Century Gothic"
                Background="#FF27597E"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" 
                Style="{DynamicResource ButtonStyle1}" Click="BtnVerMais_Click"/>
                <Button x:Name="BtnDesinscrever"
                Width="100"
                Height="25"
                Content="Desinscrever"
                FontSize="12"
                FontFamily="Century Gothic"
                Background="Red"
                Foreground="White" 
                Margin="0,0,129,18"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Style="{DynamicResource ButtonStyle1}" Click="BtnDesinscrever_Click"
            />
            </Grid>
        </Border>



    </Grid>
</UserControl>
