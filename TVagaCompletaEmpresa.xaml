<Window x:Class="JobStack.TVagaCompletaEmpresa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobStack"
        mc:Ignorable="d"
        Title="TVagaCompletaEmpresa" 
       Height="450" 
        Width="850"
        Background="#FFD9EBFB"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="{StaticResource AppIcon}">
    <Grid>
        <TextBlock x:Name="TituloVaga"
                   Text="TÍTULO DA VAGA"
                    FontSize="30"
                   Width="700"
                   Height="40"
                   FontFamily="Century Gothic Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 20, 0,0"
                        />
        <TextBlock x:Name="NomeEmpresa"
                   Text="Nome da Empresa"
                   FontSize="22"
                   Height="40"
                   Width="400"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 60, 0,0"
                        />
        <TextBlock Text="DESCRIÇÃO:"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 100, 0,0"
                   Width="150"
                   Height="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock x:Name="DescricaoVaga"
                   Text="Adicione aqui a descrição"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="Black"
                   Margin="20, 130, 0,0"
                   Width="800"
                   Height="130"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock Text="TIPO DE VAGA:"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 270, 0,0"
                   Width="145"
                   Height="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock x:Name="TipoVaga"
                   Text="Tipovaga"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="Black"
                   Margin="170, 270, 0,0"
                   Width="200"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>
        <TextBlock Text="TURNO:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="400, 270, 0,0"
            Width="70"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Turno"
            Text="Turnovaga"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="475, 270, 0,0"
            Width="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="CURSO DE INTERESSE:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="20, 310, 0,0"
            Width="205"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Curso"
            Text="Curso"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="225, 310, 0,0"
            Width="400"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="JORNADA:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="20, 350, 0,0"
            Width="105"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Jornada"
            Text="Jornada"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="130, 350, 0,0"
            Width="130"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="QUANTIDADE DE VAGAS:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="400, 350, 0,0"
            Width="250"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="QtdeVaga"
            Text="Qtde"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="645, 350, 0,0"
            Width="50"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
    </Grid>
</Window>
