<Window x:Class="JobStack.TVagaCompletaCoordenador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobStack"
        mc:Ignorable="d"
        Title="TVagaCompletaCoordenador" 
        Height="450" 
        Width="850"
        WindowStyle="None"
        Background="#FFD9EBFB"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="{StaticResource AppIcon}">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- STYLE BTN FECHAR -->
        <Style x:Key="ButtonStyle2" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="20" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="10.366,1.571,10.033,3.908" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#2973AA"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#2973AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#67A8D8"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#67A8D8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="TituloVaga"
                   Text="TÍTULO DA VAGA"
                    FontSize="30"
                   Width="700"
                   Height="40"
                   FontFamily="Century Gothic Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 20, 0,0"
                        />
        <Button x:Name="BtnFechar"
                Width="30"
                Height="30"
                Content="x"
                FontFamily="Century Gothic"
                FontSize="20"
                Background="#003964"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,10,14,0"  
                Click="BtnFechar_Click" Style="{DynamicResource ButtonStyle2}"
                    />
        <TextBlock x:Name="NomeEmpresa"
                   Text="Nome da Empresa"
                   FontSize="22"
                   Height="40"
                   Width="400"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 60, 0,0"
                        />
        <Button x:Name="BtnAceitar"
                Width="100"
                    Height="25" 
                    Margin="720, 62, 0,0"
                    Content="Aceitar"
                    FontSize="12"
                    FontFamily="Century Gothic"
                    Background="#FF27597E"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Style="{DynamicResource ButtonStyle1}" 
                    />
        <Button x:Name="BtnRejeitar"
            Width="100"
            Height="25" 
            Margin="721,94,0,0"
            Content="Rejeitar"
            FontSize="12"
            FontFamily="Century Gothic"
            Background="#FF27597E"
            Foreground="White"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Style="{DynamicResource ButtonStyle1}" 
                    />
        <TextBlock Text="DESCRIÇÃO:"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 100, 0,0"
                   Width="150"
                   Height="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock x:Name="DescricaoVaga"
                   Text="Adicione aqui a descrição"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="Black"
                   Margin="20, 130, 0,0"
                   Width="800"
                   Height="130"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock Text="TIPO DE VAGA:"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="#003964"
                   Margin="20, 270, 0,0"
                   Width="145"
                   Height="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                    />
        <TextBlock x:Name="TipoVaga"
                   Text="Tipovaga"
                   FontSize="20"
                   FontFamily="Century Gothic"
                   Background="Transparent"
                   Foreground="Black"
                   Margin="170, 270, 0,0"
                   Width="200"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>
        <TextBlock Text="TURNO:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="400, 270, 0,0"
            Width="70"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Turno"
            Text="Turnovaga"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="475, 270, 0,0"
            Width="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="CURSO DE INTERESSE:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="20, 310, 0,0"
            Width="205"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Curso"
            Text="Curso"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="225, 310, 0,0"
            Width="400"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="JORNADA:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="20, 350, 0,0"
            Width="105"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="Jornada"
            Text="Jornada"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="130, 350, 0,0"
            Width="130"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>
        <TextBlock Text="QUANTIDADE DE VAGAS:"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="#003964"
            Margin="400, 350, 0,0"
            Width="250"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
                    />
        <TextBlock x:Name="QtdeVaga"
            Text="Qtde"
            FontSize="20"
            FontFamily="Century Gothic"
            Background="Transparent"
            Foreground="Black"
            Margin="645, 350, 0,0"
            Width="50"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>

    </Grid>
</Window>
